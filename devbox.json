{
	"$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
	"packages": [
		"formatjson5@0.2.6",
		"treefmt@2.3.1",
		"go@1.25.1",
		"golangci-lint@2.5.0",
		"biome@2.2.5",
		"taplo@0.10.0",
		"yamlfmt@0.17.2",
		"toml-sort@0.24.3"
	],
	"shell": {
		"init_hook": [],
		"scripts": {
			"build": [
				"go build -o build/server ./cmd/server/main.go",
				"go build -o build/client ./cmd/client/main.go"
			],
			"fmt": "treefmt",
			"check:fmt": "treefmt --ci",
			"check:golangci-lint": "golangci-lint run ./..."
		}
	}
}
