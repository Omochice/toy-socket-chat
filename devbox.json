{
	"$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
	"packages": [
		"formatjson5@0.2.6",
		"treefmt@2.3.1",
		"go@1.25.2",
		"golangci-lint@2.5.0",
		"biome@2.3.2",
		"taplo@0.10.0",
		"yamlfmt@0.17.2",
		"toml-sort@0.24.3",
		"protobuf@32.1",
		"protoc-gen-go@1.36.10",
		"buf@1.58.0"
	],
	"shell": {
		"init_hook": [],
		"scripts": {
			"build": [
				"go build -o build/server ./cmd/server/main.go",
				"go build -o build/client ./cmd/client/main.go"
			],
			"fmt": "treefmt",
			"check:fmt": "treefmt --ci",
			"check:golangci-lint": "golangci-lint run ./...",
			"generate:proto": "protoc --go_out=pkg/protocol/pb --go_opt=paths=source_relative --proto_path=proto proto/message.proto"
		}
	}
}
